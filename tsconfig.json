{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "es2015",
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "types": [
      "highcharts"
    ]
  },
  "files": [
    "index.ts",
    "ng2-highcharts.ts",
    "./src/ng2-highcharts-base.ts",
    "./src/ng2-highcharts.ts",
    "./src/ng2-highmaps.ts",
    "./src/ng2-highstocks.ts"
  ],
  "exclude": [
    "node_modules",
    "bundles"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true
  }
}